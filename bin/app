#!/bin/sh
#
# app bootstrapping

# Create the app folder and the basic folder structure
mkdir "$1" && cd "$1"
mkdir src && mkdir src/scripts && mkdir src/styles && mkdir src/images
# Create some basic files
echo "# $1" > README.md
echo "{\n  \"directory\": \"app/bower_components\"\n}" > .bowerrc
echo "# editorconfig.org\nroot = true\n\n[*]\nindent_style = space\nindent_size = 2\nend_of_line = lf\ncharset = utf-8\ntrim_trailing_whitespace = true\ninsert_final_newline = true" > .editorconfig
echo "node_modules\nbuild\napp" > .gitignore
wget https://gist.githubusercontent.com/tcarlsen/3ff4c9032f55e4ab1358/raw/baad219fa782548a381711bc8af3eaeb9bd6608b/gulpfile.js
# Always use git
git init
# Open the project in editor
e
# We are done!
echo "Happy coding!!"
